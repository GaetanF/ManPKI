"""ManPKI Main Daemon"""

import manpki
from manpki.logger import log
from manpki.config import envready

if __name__ == "__main__":
    if envready():
        log.info("Envready")
        manpki.start()
    else:
        log.critical("Cannot start ManPKID, the environnement isn't ready")
